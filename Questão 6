programa {
  funcao inicio() {
//Declarando variaveis
cadeia nome
real nota1, nota2, media, soma

//Coletando dados
escreva("Digite seu nome: ")
leia(nome)
escreva("Digite a primeira nota: ")
leia(nota1)
escreva("Digite a segunda nota: ")
leia(nota2)

//Calculando
media = (nota1 + nota2 / 2)

se (media > 6) escreva("Parabéns, você foi aprovado!")
se (media < 4) escreva("Você foi reprovado.")

//Exibindo resultados

  }
}
